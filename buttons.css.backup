/* BUTTONS */

/* IP-Symcon override */
.ipsCategory > .container .content .visual > .text {
    line-height: normal;
}
.td {
    display: block !important;
    float: left;
}
/* custom */
.ipsCategory > .container .content .visual, .ipsCategory > .container .content .link {
    background-color: #FFCC00;
    border: medium none;
    color: #000000;
    cursor: pointer;
    display: block;
    font-size: 18px;
    height: 20px;
    margin: 5px;
    overflow: hidden;
    text-align: right;
    text-decoration: none;
    border-radius: 20px;
    padding: 10px;
    width: 120px; /* min-width für An/Aus: 85px */
    float: right;
}
.ipsCategory > .container .content .link {
    background-color: #FF9900;
    float: right;
    width: 40px;
}
.ipsCategory > .container .content .link > .ipsIconGraph {
    font-size: 32px;
    height: 40px;
    margin-right: 5px;
    margin-top: -10px;
    padding: 2px;
}
.ipsWebFront .ipsContainer .content .ipsContainer .ipsContainer .content .ipsContainer .ipsContainer .content .ipsContainer.text {
    height: 40px;
}
.ipsCategory > .container .content .visual > .text {
    background: none repeat scroll 0 0 #000000;
    color: #FFCC00;
    display: block;
    float: left;
    height: 40px;
    margin-left: 10px;
    margin-right: 5px;
    margin-top: -10px;
    padding: 2px;
    font-size: 30px;
}

/* An/Aus */
.ipsCategory > .container .content .visual > .enum {
    width: 100%;
    height: 100%;
}
.ipsCategory > .container .content .visual > .enum > div {
    height: 40px;
    margin-top: -10px;
    width: 30%;
}
.ipsCategory > .container .content .visual > .enum > div:nth-child(2) {
    border-top-left-radius: 20px;
    border-bottom-left-radius: 20px;
}
.ipsCategory > .container .content .visual > .enum > div:last-child {
    border-top-right-radius: 20px;
    border-bottom-right-radius: 20px;
}
.ipsCategory > .container .content .visual > .enum > div.selected {
}